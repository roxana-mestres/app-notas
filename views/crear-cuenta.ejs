<div class="contenedor">
    <div class="crear-cuenta">
        <form action="/crear-cuenta" method="POST">
            <div class="avatar">
                <div class="color"></div>
                <div class="avatar-imagen avatar-uno"></div>
                <div class="avatar-imagen avatar-dos"></div>
                <div class="avatar-imagen avatar-tres"></div>
                <div class="avatar-imagen avatar-cuatro"></div>
                <div class="avatar-imagen avatar-cinco"></div>
            </div>
            <div class="campo">
                <input type="text" class="form" placeholder="Nombre_" name="nombre" required>
                <div class="mensaje-error" style="display: none;"></div>
            </div>
            <div class="campo">
                <input type="text" class="form" placeholder="Apellidos_" name="apellido">
                <div class="mensaje-error" style="display: none;"></div>
            </div>
            <div class="campo">
                <input type="email" class="form" placeholder="Correo electrónico_" required name="email">
                <div class="mensaje-error" style="display: none;"></div>
            </div>
            <div class="campo">
                <div class="contenedor-contrasena">
                    <input type="password" class="form" placeholder="Contraseña_" name="contrasena" required>
                    <span class="material-icons-outlined icono-ojo" style="font-size: 1em;">visibility_off</span>
                    <span class="material-icons-outlined icono-ojo-cerrado"
                    style="font-size: 1em; display: none;">visibility</span>
                    <div class="mensaje-error" style="display: none; margin-left: 30px;"></div>
                </div>
            </div>
            <button class="boton-reverso doble" type="submit">Crear cuenta</button>
        </form>
    </div>
    <div class="inicio-sesion">
        <h2>¿Ya tienes cuenta? <br /> Inicia sesión</h2>
        <div class="botones">
            <button class="boton doble"><a href="/iniciar-sesion">Iniciar sesión</a></button>
        </div>
    </div>
</div>