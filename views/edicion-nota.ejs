<div class="container">
  <form action="/edicion-nota/<%= notaId %>?_method=PUT" method="POST">
    <input type="hidden" id="input-color" name="color" value="<%= nota.color %>">
    <div class="contenido">
      <div class="titulos">
        <input type="text" name="titulo" class="transparent-input" id="titulo-nota" value="<%= nota.titulo %>" />
        <h3 id="fecha">
          <%= nota.creado.toDateString() %>
        </h3>
      </div>
      <div class="texto">
        <div class="resaltado" id="div-resaltado">
          <textarea id="cuerpo-nota" class="transparent-input" name="cuerpo"><%= nota.cuerpo %></textarea>
        </div>
      </div>
    </div>
    <div class="footer">
      <div class="footer-icons">
        <span class="material-symbols-outlined"><a href="/notas" style="color: #F4E5E0; font-size: 40px;">home</a></span>
        <button type="submit" class="material-symbols-outlined" style="color: #F4E5E0; font-size: 40px;">save</button>
        <button id="borrar-nota" type="button" style="color: #F4E5E0; font-size: 40px;" onclick="borrarNota()">
          <span class="material-symbols-outlined">delete</span>
        </button>
      </div>
    </div>
  </form>
  <form id="borrar-nota-form" action="/edicion-nota/<%= notaId %>?_method=DELETE" method="POST" style="display: none;">
    <input type="hidden" name="_method" value="DELETE">
  </form>
</div>